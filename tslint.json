{
    "extends": ["tslint:recommended", "tslint-eslint-rules"],
    "rules": {
        "no-console": false,
        "no-constant-condition": true,
        "triple-equals": true,
        "no-multi-spaces": false,
        "array-bracket-spacing": [true, "never"],
        "block-spacing": [true, "always"],
        "brace-style": [true, "1tbs", { "allowSingleLine": true }],
        "linebreak-style": [true, "LF"],
        "no-bitwise": false,
        "indent": [true, "spaces", 4],
        "no-trailing-whitespace": false,
        "no-unused-expression": [true, "allow-new"],
        "object-curly-spacing": [false],
        "object-literal-key-quotes": [true, "as-needed"],
        "quotemark": [true, "single", "avoid-escape"],
        "space-in-parens": false,
        "ter-arrow-parens": [true],
        "no-shadowed-variable": false,
        "ordered-imports": [false],
        "only-arrow-functions": [false],
        "forin": false,
        "max-classes-per-file": [false, 1],
        "max-line-length": false,
        "class-name": true,
        "whitespace": false,
        "interface-name": [false],
        "no-namespace": [true, "allow-decalarations"],
        "object-literal-sort-keys": false,
        "prefer-for-of": false,
        "trailing-comma": [false],
        "no-string-literal": false,
        "no-var-requires": false,
        "no-irregular-whitespace": true,
        "no-default-export": false,
        "variable-name": [false],
        "no-empty": false,
        "one-variable-per-declaration": false,
        "align": false,
        "ter-no-tabs": true,
        "no-redundant-jsdoc": false,
        "jsdoc-format": true,
        "no-inferrable-types": true,
        "semicolon": [false],
        "ban": [true, { "name": "isNaN", "message": "Use Number.isNaN instead" }],
        "space-before-function-paren": false,
        "member-ordering": [
            true,
            {
                "order": [
                    "public-instance-field",
                    "protected-instance-field",
                    "private-instance-field",
                    "constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ]
    }
}
